<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="diego.jimenez.angel.hernandez.myapplication.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/haciaInformacion"
            app:destination="@id/informacion_pacientes" />

    </fragment>



    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="diego.jimenez.angel.hernandez.myapplication.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="diego.jimenez.angel.hernandez.myapplication.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/informacion_pacientes"
        android:name="diego.jimenez.angel.hernandez.myapplication.informacion_pacientes"
        android:label="fragment_informacion_pacientes"
        tools:layout="@layout/fragment_informacion_pacientes">

        <action
            android:id="@+id/haciaHome"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/detalle_pacientes"
        android:name="diego.jimenez.angel.hernandez.myapplication.detalle_pacientes"
        android:label="fragment_detalle_pacientes"
        tools:layout="@layout/fragment_detalle_pacientes">

        <action
            android:id="@+id/haciaInformacion"
            app:destination="@id/informacion_pacientes" />
    </fragment>



</navigation>